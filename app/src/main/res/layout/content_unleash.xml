<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_unleash"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ellehacks.unleash.MainActivity">


    <ImageView
        android:id="@+id/mountain_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/mountain_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/text_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Text" />

        <Button
            android:id="@+id/talk_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_button_view"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/text_button_view"
            android:text="Talk" />

    </RelativeLayout>

</RelativeLayout>
