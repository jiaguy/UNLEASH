<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_feelings_results"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ellehacks.unleash.FeelingsResults">

    <ImageView
        android:id="@+id/dark_boat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/moon" />

    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/home2"
            android:background="?android:selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/Results_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:text="Results"
            android:textSize="30dp"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/Results_label"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Mood"
                android:textColor="@color/colorAccent"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tone_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="%"
                android:textColor="@color/colorAccent"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/layout"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tone_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tone_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout1"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tone_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tone_amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout2"
            android:layout_marginEnd="12dp" >

            <TextView
                android:id="@+id/tone_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tone_amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout3"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/tone_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tone_amount4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout4"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/tone_label5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tone_amount5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout5"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/tone_label6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tone_amount6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layout6"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/tone_label7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:text=""
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tone_amount7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/song_title_label"
            android:text="Song Title"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout7"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_layout"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/skip_to_start_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/skip_to_start_button"
            android:layout_below="@+id/list_layout"
            android:tint="@color/colorAccent"
            android:background="?android:selectableItemBackground" />
        <ImageView
            android:id="@+id/play_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pause_button"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/list_layout"
            android:tint="@color/colorAccent"
            android:background="?android:selectableItemBackground" />
        <ImageView
            android:id="@+id/skip_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/skip_button"
            android:layout_below="@+id/list_layout"
            android:tint="@color/colorAccent"
            android:background="?android:selectableItemBackground" />
    </LinearLayout>


</RelativeLayout>
